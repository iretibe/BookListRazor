@page
@model BookListRazor.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Index";
}


<div class="container row">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>

    <div class="col-6 text-right">
        <a asp-page="Create" class="btn btn-primary">Create New Book</a>
    </div>
</div>


@if (Model.Message != null)
{
<div class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="close">
        <span aria-label="true">&times;</span>
    </button>
    @Model.Message
</div>
}




<form method="post">
    @if (Model.Books.Count() > 0)
    {
        <br /><br />
        <table class="table table-striped table-bordered">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ISBN)
                    </td>
                    <td style="width:170px">
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" 
                            onclick="return confirm('Are you sure you want to delete this book?')" 
                            class="btn btn-danger btn-sm" style="width:70px;">Delete
                        </button>

                        <a asp-route-id="@item.Id" asp-page="Edit" class="btn btn-success btn-sm" style="width:70px;">Edit</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No Books available.</p>
    }
</form>


